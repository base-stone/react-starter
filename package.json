{
  "name": "react-starter",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite --mode local_dev",
    "build:prod": "tsc && NODE_ENV=production vite build --mode prod",
    "eslint": "eslint ./src --ext tsx,ts --fix --report-unused-disable-directives --max-warnings 0",
    "prettier": "prettier --write \"./src/**/*.{tsx,ts,scss}\"",
    "stylelint": "stylelint --fix \"./src/**/*.scss\"",
    "lint:css:js": "npm run eslint && npm run prettier && npm run stylelint",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@base-stone/react": "^0.2.7",
    "@types/node": "^20.10.1",
    "@types/react": "^18.2.39",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@vitejs/plugin-react": "^4.2.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "prettier": "^3.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "rollup-plugin-external-globals": "^0.9.1",
    "sass": "^1.69.5",
    "stylelint": "^15.11.0",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-recommended-scss": "^13.1.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-config-standard-vue": "^1.0.0",
    "stylelint-order": "^6.0.3",
    "typescript": "^5.3.2",
    "vite": "^5.0.5",
    "vite-plugin-html": "^3.2.0"
  }
}
